rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // CLIENTS: Users can only manage their own clients
    match /clients/{clientId} {
      allow read, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // SAVED LEADS: Users can manage their own saved leads
    match /savedLeads/{leadId} {
      allow read, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId) && request.resource.data.createdAt == request.time;
    }

    // BLOG POSTS: Users can manage their own blog posts
    match /blogPosts/{postId} {
        allow read, delete: if isOwner(resource.data.userId);
        allow create: if isOwner(request.resource.data.userId) && request.resource.data.createdAt == request.time;
    }
  }
}
