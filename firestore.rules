rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the resource belongs to the user
    function isOwner(resource) {
      return resource.data.userId == request.auth.uid;
    }

    // Generic rule for collections where documents are owned by users
    match /{collection}/{docId} {
      // Allow read and delete if the user is authenticated and is the owner of the document.
      allow read, delete: if isAuthenticated() && isOwner(get(path(collection, docId)));

      // Allow create if the user is authenticated and is setting themselves as the owner.
      allow create: if isAuthenticated() && isOwner(request.resource);
    }
  }
}
